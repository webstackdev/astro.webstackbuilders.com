{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "allowJs": true,
    "verbatimModuleSyntax": true
  },
  "baseUrl": ".",
  "paths": {
    "@components/*": ["src/components/*"],
    "@content/*": ["src/content/*"],
    "@data/*": ["src/data/*"],
    "@layouts/*": ["src/layouts/*"],
    "@lib/*": ["src/lib/*"],
    "@styles/*": ["src/styles/*"]
  }
}
