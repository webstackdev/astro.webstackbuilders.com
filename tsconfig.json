{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "verbatimModuleSyntax": true,
  },
  "baseUrl": ".",
  "paths": {
    "@assets/*": ["src/assets/*"],
    "@components/*": ["src/components/*"],
    "@content/*": ["src/content/*"],
    "@data/*": ["src/data/*"],
    "@layouts/*": ["src/layouts/*"],
    "@lib/*": ["src/lib/*"],
    "@styles/*": ["src/assets/styles/*"]
  }
}
