---
// Newsletter CTA component for email signups
export interface Props {
  title?: string
  description?: string
  placeholder?: string
  buttonText?: string
  formAction?: string
}

const {
  title = "Stay Updated",
  description = "Subscribe to our newsletter for the latest insights on web development and digital solutions.",
  placeholder = "Enter your email address",
  buttonText = "Subscribe",
  formAction = "/api/newsletter"
} = Astro.props
---

<section class="cta-newsletter">
  <div class="cta-newsletter__inner">
    <h2 class="cta-newsletter__title">{title}</h2>
    <p class="cta-newsletter__description">{description}</p>

    <form class="cta-newsletter__form" method="POST" action={formAction}>
      <div class="cta-newsletter__input-group">
        <input
          type="email"
          name="email"
          placeholder={placeholder}
          class="cta-newsletter__input"
          required
          aria-label="Email address for newsletter subscription"
        />
        <button
          type="submit"
          class="cta-newsletter__button"
        >
          {buttonText}
        </button>
      </div>
    </form>
  </div>
</section>