---
/**
 * Open Graph / Facebook / X.com metadata
 */
import { getSiteUrl } from '@lib/config/siteUrlServer'
import { getSocialImageLink } from '@components/Head/server'
import contactData from '@content/contact.json'

export interface Props {
  description: string
  path: string
  title: string
}

const { title, description, path } = Astro.props


---

{/* Types include 'website', 'article', 'profile', and 'product' */}
<meta property="og:type" content="website" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={getSocialImageLink(path)} />
<meta property="og:image:alt" content={`Social card for ${title}`} />
{/* Canonical URL of the page */}
<meta property="og:url" content={`${getSiteUrl()}/${path}`} />
<meta property="og:site_name" content={contactData.company.name} />

{/* Twitter metadata */}
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@webstackdev" />
<meta name="twitter:creator" content="@webstackdev" />
