export interface Props {
  path: string,
}

//const { path } = Astro.props
---

{/* Page-Specific */}
  <meta name="description" content="{{ FIXME description or autoDescription or site.description }}">
  {/* set pageTitle = title or site.title */}
  <meta name="og:title" content="{% FIXME pageTitle pageTitle=pageTitle %}" />
  {/* set pageDescription = description or autoDescription or site.description */}
  <meta name="og:description" content="{% FIXME pageDescription pageDescription=pageDescription %}">
  <meta property="og:url" content="{{ FIXME pageUrl }}">
{/* General */}
  <meta property="og:site_name" content="{{ FIXME site.title }}">
  <meta property="og:locale" content="{{ FIXME site.locale }}">
{/* Posts get additional meta tags */}
{/* if layout == 'article' */}
  <meta property="og:type" content="article">
  <meta property="article:published_time" content="{{ FIXME page.date | dateToISO }}">
{/* endif */}
