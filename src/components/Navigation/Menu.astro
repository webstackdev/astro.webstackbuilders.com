---
import { navigationItems } from './server'
export interface Props {
  path: string
}

const { path } = Astro.props

const activeMenuItem = (url: string) => {
  return path === url ? 'nav-item-active' : ''
}
---

<style>
  /* No-scroll class used by toggleMenu() method in Navigation script */
  :global(.no-scroll) {
    overflow: hidden;
  }

  /* Mobile menu - hidden by default */
  .main-nav-menu {
    display: none;
  }

  /* Mobile menu items - initially hidden with transform */
  .main-nav-item {
    opacity: 0;
    transform: translateY(-1rem);
    transition: opacity 0.2s ease, transform 0.2s ease;
  }

  /* Desktop menu - visible */
  @media (min-width: 1024px) {
    .main-nav-menu {
      display: flex;
    }

    .main-nav-item {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Staggered animation delays for mobile menu items - start after splash completes (0.5s) */
  @media (max-width: 1023px) {
    #header.aria-expanded-true .main-nav-item:nth-child(1) {
      transition-delay: 0.5s;
    }
    #header.aria-expanded-true .main-nav-item:nth-child(2) {
      transition-delay: 0.6s;
    }
    #header.aria-expanded-true .main-nav-item:nth-child(3) {
      transition-delay: 0.7s;
    }
    #header.aria-expanded-true .main-nav-item:nth-child(4) {
      transition-delay: 0.8s;
    }
    #header.aria-expanded-true .main-nav-item:nth-child(5) {
      transition-delay: 0.9s;
    }
    #header.aria-expanded-true .main-nav-item:nth-child(6) {
      transition-delay: 1s;
    }
  }

  /* Mobile splash background animation */
  /*
    Use a fixed, centered pseudo-element that scales from the
    toggle button origin to cover the entire viewport. Keep the
    splash slightly translucent and ensure it sits *under* the
    menu items so links can appear above it.
  */
  :global(#mobile-splash) {
    /* anchor point for the splash (small element near toggle) */
    height: 1px;
    width: 1px;
    position: fixed;
    /* keep near the top-right where the hamburger lives but respect safe-area */
    right: env(safe-area-inset-right, 20px);
    top: env(safe-area-inset-top, 20px);
    pointer-events: none;
    z-index: var(--z-mobile-splash);
  }

  :global(#mobile-splash::after) {
    content: '';
    position: fixed;
    /* Position the circle center at the hamburger button location */
    right: calc(env(safe-area-inset-right, 20px) + 20px); /* Adjust to button center */
    top: calc(env(safe-area-inset-top, 20px) + 20px); /* Adjust to button center */
    /* Center the circle on this point */
    transform: translate(50%, -50%) scale(0);
    transform-origin: center;
    border-radius: 50%;
    /* make it big enough to guarantee full coverage on all viewports */
    width: 300vmax;
    height: 300vmax;
    /* keep the splash slightly translucent so page chrome is visible under it */
    background-color: var(--color-primary-offset);
    opacity: 0.94;
    will-change: transform, opacity;
    transition: transform 0.55s cubic-bezier(0.755, 0.05, 0.855, 0.06);
    /* place the splash above everything except nav menu items and close button */
    z-index: var(--z-mobile-splash);
    pointer-events: none;
  }

  /* Mobile menu open state splash - scale up to cover viewport */
  :global(#header.aria-expanded-true #mobile-splash::after) {
    transform: translate(50%, -50%) scale(1);
  }

  /* Mobile menu open state display */
  :global(#header.aria-expanded-true) .main-nav-menu {
    display: flex;
    flex-direction: column;
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    justify-content: center;
    align-items: center;
    /* ensure menu items sit above the splash (120 > 110) */
    z-index: var(--z-mobile-menu);
    /* Delay menu appearance until splash covers viewport */
    opacity: 0;
    transition: opacity 0.3s ease 0.5;
  }

  :global(#header.aria-expanded-true) .main-nav-menu.menu-visible {
    opacity: 1;
  }

  :global(#header.aria-expanded-true) .main-nav-item {
    opacity: 1;
    transform: translateY(0);
  }

  :global(#header.aria-expanded-true) .main-nav-item a {
    color: var(--color-bg) !important;
    opacity: 1;
  }

  /* Desktop navigation item underline effects */
  @media (min-width: 1024px) {
    .main-nav-item a {
      color: var(--color-primary-offset);
      text-decoration: underline;
      text-decoration-style: dotted;
      text-decoration-color: var(--color-primary-offset);
      text-underline-offset: 5px;
      transition: color 0.2s, text-decoration-color 0.2s;
    }

    .main-nav-item a:hover,
    .main-nav-item a:focus {
      color: var(--color-primary);
      text-decoration-color: transparent;
    }

    .main-nav-item::after {
      background-color: var(--color-primary);
      bottom: -0.25rem;
      content: '';
      display: block;
      height: 0.25rem;
      left: 1.25rem;
      position: absolute;
      right: 1.25rem;
      transform-origin: 0 50%;
      transform: scaleX(0);
      transition: transform 0.3s cubic-bezier(0.86, 0, 0.07, 1) 0.1s;
    }

    .main-nav-item:hover::after {
      transform: scaleX(1);
    }

    .nav-item-active::after {
      background-color: var(--color-primary-offset);
      transform: none;
    }

    .nav-item-active:hover::after {
      background-color: var(--color-primary);
    }
  }
</style>

<!-- Mobile menu splash background animation -->
<div id="mobile-splash" aria-hidden="true"></div>

<nav id="main-nav" class="main-nav" role="navigation" aria-label="Main">
  <ul
    class="main-nav-menu flex flex-row justify-center relative lg:items-center lg:flex-row"
    tabindex="-1"
    aria-label="main navigation"
  >
    {
      navigationItems.map(navItem => (
        <li class:list={['main-nav-item opacity-100 lg:relative', activeMenuItem(navItem.url)]}>
          <a
            href={navItem.url}
            class="block text-primary text-xl lg:text-lg font-bold tracking-[5px] lg:tracking-normal p-4 lg:px-5 lg:py-3 text-center uppercase lg:lowercase no-underline hover:text-bg-offset hover:bg-primary lg:hover:bg-inherit focus:text-bg-offset focus:bg-primary lg:focus:bg-inherit focus:outline-0 lg:flex lg:items-center lg:relative lg:whitespace-nowrap lg:z-10"
          >
            {navItem.title}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
<script>
  import { registerScript } from '@components/Scripts/loader'
  import { Navigation } from './client'

  // Register navigation script to initialize with Astro View Transitions
  registerScript(Navigation)
</script>
