---
/**
 * "Technologies and Skills" section for the homepage.
 * Renders a dark strip with icon + label links for each technology.
 */
export interface Props {
  technologies: string[]
}

const { technologies } = Astro.props as Props

/** Convert a display name like "Argo CD" to a URL slug like "argo-cd" */
function toTagSlug(name: string): string {
  return name
    .toLowerCase()
    .trim()
    .replace(/[^a-z0-9\s-]/g, '')
    .replace(/\s+/g, '-')
}
---

<div class="bg-content rounded-2xl py-8 px-6 overflow-hidden" aria-labelledby="home-technologies-title">
  <h2 id="home-technologies-title" class="sr-only">Technologies &amp; Expertise</h2>

  <div class="flex items-center justify-center gap-12 flex-wrap">
    {technologies.map((tech) => (
      <a
        href={`/tags/${toTagSlug(tech)}`}
        class="group flex items-center gap-3 text-page-base/60 hover:text-spotlight transition-colors"
      >
        <div class="w-10 h-10 rounded-lg bg-page-base/10 flex items-center justify-center group-hover:bg-page-base/20 transition-colors">
          <div class="w-7 h-7 rounded bg-page-base/5 border border-page-base/20 flex items-center justify-center text-[9px] text-page-base/40">
            img
          </div>
        </div>
        <span class="text-sm font-semibold">{tech}</span>
      </a>
    ))}
  </div>
</div>
