---
/**
 * "Technologies and Skills" section for the homepage.
 * Renders a dark strip with icon + label links for each technology.
 */
import { type CollectionEntry } from 'astro:content'
import { Image } from 'astro:assets'

export interface Props {
  skills: Array<CollectionEntry<'tags'>>
}

const { skills } = Astro.props as Props
---

<div class="bg-content rounded-2xl py-6 px-6" aria-labelledby="home-technologies-title">
  <h2 id="home-technologies-title" class="sr-only">Technologies &amp; Expertise</h2>

  <div class="flex items-center gap-10 flex-nowrap overflow-x-auto h-10">
    {skills.map((skill) => (
      <a
        href={`/tags/${skill.data.slug}`}
        class="group flex items-center gap-3 text-page-base/60 hover:text-spotlight transition-colors h-10 shrink-0"
      >
        {skill.data.logo && (
          <Image
            src={skill.data.logo}
            alt={skill.data.displayName}
            width={skill.data.logo.width}
            height={skill.data.logo.height}
            loading="lazy"
            class="h-8 w-8 object-contain"
          />
        )}
        <span class="text-sm font-semibold">{skill.data.displayName}</span>
      </a>
    ))}
  </div>
</div>
