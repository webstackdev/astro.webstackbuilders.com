---
// Hero component for the landing page
import Sprite from "@components/Sprite/index.astro"

export interface Props {
  pretitle?: string
  title?: string
  benefits?: Array<{
    text: string
    highlight: string
  }>
  primaryLink?: {
    href: string
    text: string
  }
  secondaryLink?: {
    href: string
    text: string
  }
}

const {
  pretitle = "Client-Focused Web Application Developer",
  title = "",
  benefits = [
    { text: "increase in sales", highlight: "57%" },
    { text: "ROI for every $1", highlight: "$114" },
    { text: "conversion", highlight: "Up to 400%" }
  ],
  primaryLink = { href: "/services/web-development", text: "Improve Your Product" },
  secondaryLink = { href: "/services/consulting", text: "Start from scratch" }
} = Astro.props
---

<section class="hero flex justify-center py-8 pb-16 lg:min-h-[500px]">
  <div class="hero__inner">
    <span class="hero__pretitle text-lg font-bold tracking-tight mb-4 order-first uppercase">{pretitle}</span>
    <h1 class="hero__title mb-[0.3em]">{title}</h1>
    <div class="hero__content">
      <div class="hero__cta_badge">Up to:</div>
      <ul class="hero__cta_list">
        {benefits.map(benefit => (
          <li class="hero__cta_points">
            <span class="hero__icon">
              <Sprite name="check" />
            </span>
            <span class="hero__cta_lead">
              <strong>{benefit.highlight}</strong> {benefit.text};
            </span>
          </li>
        ))}
      </ul>
    </div>
    <a class="hero__link text-[var(--color-text)] inline-block relative after:content-[''] after:absolute after:bottom-0 after:left-0 after:right-0 after:h-2 after:bg-[var(--color-primary)] after:scale-x-0 after:origin-left after:transition-transform after:duration-300 after:ease-out before:content-[''] before:absolute before:bottom-0 before:left-0 before:right-0 before:h-2 before:bg-[var(--color-border)] before:-z-10 after:-z-10 hover:after:scale-x-100" href={primaryLink.href}>
      {primaryLink.text}
    </a>
    <a class="hero__link text-[var(--color-text)] inline-block relative after:content-[''] after:absolute after:bottom-0 after:left-0 after:right-0 after:h-2 after:bg-[var(--color-primary)] after:scale-x-0 after:origin-left after:transition-transform after:duration-300 after:ease-out before:content-[''] before:absolute before:bottom-0 before:left-0 before:right-0 before:h-2 before:bg-[var(--color-border)] before:-z-10 after:-z-10 hover:after:scale-x-100" href={secondaryLink.href}>
      {secondaryLink.text}
    </a>
  </div>
  <div class="hero__image">
    <slot name="hero-image">
      <!-- Default hero image or SVG goes here -->
      <div class="hero__placeholder">Hero Image</div>
    </slot>
  </div>
</section>