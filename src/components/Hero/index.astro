---
/**
 * Hero Component
 *
 * A modern hero section with pretitle, main title, benefits list, CTAs, and an optional image.
 * Fully responsive with Tailwind CSS styling.
 *
 * @example
 * ```astro
 * import heroImage from '@assets/images/hero.webp'
 * <Hero
 *   pretitle="Client-Focused Web Development"
 *   title="Build Amazing Web Experiences"
 *   image={{ src: heroImage, alt: "Hero illustration" }}
 * />
 * ```
 */
import type { ImageMetadata } from 'astro'

export interface Props {
  /** Hero variant to determine layout */
  variant?: 'default' | 'home'
  /** Small text above the main title */
  pretitle?: string
  /** Main heading text */
  title?: string
  /** List of benefits to display */
  benefits?: Array<{
    text: string
    highlight: string
  }>
  /** Primary call-to-action link */
  primaryLink?: {
    href: string
    text: string
  }
  /** Secondary call-to-action link */
  secondaryLink?: {
    href: string
    text: string
  }
  /** Hero image (optional) */
  image?: {
    src: ImageMetadata
    alt: string
  }
}

const {
  variant = "default",
  pretitle = "Client-Focused Web Application Developer",
  title = "Building Modern Web Solutions That Drive Results",
  benefits = [
    { text: "increase in sales", highlight: "57%" },
    { text: "ROI for every $1", highlight: "$114" },
    { text: "conversion", highlight: "Up to 400%" }
  ],
  primaryLink = { href: "/services/web-development", text: "Improve Your Product" },
  secondaryLink = { href: "/services/consulting", text: "Start from scratch" },
  image
} = Astro.props

// Dynamic imports based on variant
const ContentComponent = variant === 'home'
  ? (await import('./home/content.astro')).default
  : (await import('./default/content.astro')).default

const ImageComponent = variant === 'home'
  ? (await import('./home/image.astro')).default
  : (await import('./default/image.astro')).default
---

<section class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16 lg:py-20">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
    <ContentComponent
      pretitle={pretitle}
      title={title}
      benefits={benefits}
      primaryLink={primaryLink}
      secondaryLink={secondaryLink}
    />

    <ImageComponent {image} />
  </div>
</section>