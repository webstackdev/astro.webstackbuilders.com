---
import ComputersAnimation from '@components/Animations/Computers/index.astro'
import Button from '@components/Button/index.astro'

export interface Props {
  pretitle: string
  benefits: string[]
}

const { pretitle, benefits } = Astro.props as Props
---

<section
  class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16 lg:py-20"
  aria-labelledby="home-hero-title"
>
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
    <div class="hidden lg:block lg:order-2">
      <ComputersAnimation />
    </div>

    <div class="order-2 lg:order-1 space-y-6 font-mono">
      <div class="text-primary">$ whoami</div>

      <h1 id="home-hero-title" class="text-4xl md:text-5xl lg:text-7xl font-bold text-primary leading-none">
        Senior<br />
        Platform<br />
        <span class="text-content-offset">Authority.</span>
      </h1>

      <p class="text-base md:text-lg text-content-offset font-sans max-w-xl">{pretitle}</p>

      <div class="bg-content text-page-base p-6 rounded-lg transition-transform duration-200 ease-out will-change-transform hover:scale-[1.02] hover:-translate-y-px">
        <div class="text-xs text-page-base/60 mb-3">// What I deliver</div>
        <ul class="space-y-2 text-sm">
          {benefits.map(benefit => (
            <li class="flex items-center gap-2">
              <span class="text-success">✓</span>
              <span>{benefit}</span>
            </li>
          ))}
        </ul>
      </div>

      <div class="flex gap-4">
        <Button href="/about" variant="success" text="Read My Story" />
        <a
          href="/contact"
          class="px-6 py-3 text-primary font-bold underline underline-offset-4 decoration-2 decoration-dotted decoration-primary transition-colors hover:text-content-offset hover:decoration-content-offset focus-visible:text-content-offset focus-visible:underline focus-visible:decoration-2 focus-visible:decoration-dotted focus-visible:decoration-content-offset"
        >
          Get in Touch →
        </a>
      </div>
    </div>
  </div>
</section>
