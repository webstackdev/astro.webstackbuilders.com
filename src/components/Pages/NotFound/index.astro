---
import Icon from '@components/Icon/index.astro'

/*
export interface Props {
  heading?: string
}

const {
  heading = ''
} = Astro.props
*/
---

<div class="max-w-4xl mx-auto w-full block py-2 md:py-4">
  <!-- Error Hero Section -->
  <header class="text-center max-w-2xl mx-auto mb-8">
    <div class="inline-flex items-center justify-center w-18 h-18 rounded-full bg-primary/10 mb-5">
      <Icon
        icon="error"
        color="page-inverse"
        size={12}
      />
    </div>
    <h1 class="text-4xl md:text-5xl font-bold text-page-inverse mb-4">404</h1>
    <p class="text-lg text-content-offset leading-relaxed mb-4">
      Sorry, the page you are looking for doesn't exist or has been moved.
    </p>
  </header>

  <div class="max-w-lg w-full">
    <div class="mb-8 text-center">
      <div class="space-y-4">
        <a
          href={"/"}
          class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-spotlight hover:bg-spotlight-offset focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-colors duration-200"
        >
          Go Home
        </a>
      </div>
    </div>
  </div>
</div>
