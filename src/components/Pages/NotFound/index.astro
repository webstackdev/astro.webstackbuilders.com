---
/*
export interface Props {
  heading?: string
}

const {
  heading = ''
} = Astro.props
*/
---

<div class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8">
  <div class="max-w-lg w-full">
    <div class="mb-8 text-center">
      <h1 class="text-9xl font-bold mb-4">404</h1>
      <p class="text-lg mb-8">
        Sorry, the page you are looking for doesn't exist or has been moved.
      </p>
      <div class="space-y-4">
        <a
          href={"/"}
          class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-spotlight hover:bg-spotlight-offset focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-colors duration-200"
        >
          Go Home
        </a>
      </div>
    </div>
  </div>
</div>
