---
export interface Props {
  title?: string
  message?: string
}

const { title = "Test Component", message = "This is a test message" } = Astro.props
---

<div id="test-container" class="test-component">
  <h2 class="test-title">{title}</h2>
  <p class="test-message">{message}</p>
  <button type="button" class="test-button" id="test-btn">
    Test Button
  </button>
</div>

<script>
  const button = document.getElementById('test-btn')
  if (button) {
    button.addEventListener('click', () => {
      console.log('Test button clicked')
    })
  }
</script>