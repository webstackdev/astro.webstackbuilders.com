---
export interface Props {
  heading?: string
  subheading?: string
  description?: string
  ctaHref?: string
  ctaLabel?: string
}

const {
  heading = '404',
  subheading = 'Page Not Found',
  description = "Sorry, the page you are looking for doesn't exist or has been moved.",
  ctaHref = '/',
  ctaLabel = 'Go Home',
} = Astro.props
---

<div class="mb-8 text-center">
  <h1 class="text-9xl font-bold text-content-muted mb-4">{heading}</h1>
  <h2 class="text-3xl md:text-4xl font-bold text-content mb-4">{subheading}</h2>
  <p class="text-lg text-content-muted mb-8">
    {description}
  </p>
  <div class="space-y-4">
    <a
      href={ctaHref}
      class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-spotlight hover:bg-spotlight-offset focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-colors duration-200"
    >
      {ctaLabel}
    </a>
  </div>
</div>
