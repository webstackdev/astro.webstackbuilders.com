---
/**
 * Social Card Component
 * Generates a social media card for sharing
 */

export interface Props {
  /** Card title */
  title: string
  /** Card description */
  description?: string
  /** Publication date */
  publishedDate?: string
}

const {
  title,
  description,
  publishedDate
} = Astro.props
---

<div class="relative flex flex-col justify-center items-center overflow-hidden rounded-xl text-white font-sans box-border bg-gradient-to-br from-slate-900 to-blue-600 w-[1200px] h-[630px] p-16 max-w-full aspect-[1200/630] xl:w-full">
  <!-- Decorative elements -->
  <div class="absolute inset-0 pointer-events-none">
    <!-- Decoration 1 -->
    <div class="absolute rounded-full bg-white/10 w-48 h-48 -top-24 -left-24"></div>
    <!-- Decoration 2 -->
    <div class="absolute rounded-full bg-white/5 w-36 h-36 -bottom-16 -right-16"></div>
  </div>

  <!-- Content -->
  <div class="text-center z-[2] max-w-[1000px]">
    <h1 class="font-medium text-white leading-tight text-6xl mb-8">{title}</h1>
    {description && (
      <p class="leading-relaxed opacity-90 text-2xl mb-4">{description}</p>
    )}
    {publishedDate && (
      <div class="opacity-80 italic text-xl">Published on {publishedDate}</div>
    )}
  </div>

  <!-- Brand -->
  <div class="absolute font-bold opacity-80 z-[2] bottom-10 right-10 text-3xl">Webstack Builders</div>
</div>