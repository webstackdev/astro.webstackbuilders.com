---
import { generateBreadcrumbs } from '@components/Breadcrumbs/server'

export interface Props {
  /** The current URL path */
  path: string
  /** Optional page title override */
  pageTitle?: string
}

const { path, pageTitle } = Astro.props
// Astro.site is only available when the project is configured with a `site` value.
// In unit tests (Astro Container API), that config may be unavailable, so fall back to the request URL origin.
const site = Astro.site ?? (Astro.url ? new URL(Astro.url.origin) : undefined)

// Don't show breadcrumbs on home page
if (path === '/' || path === '') {
  return null
}

const breadcrumbs = generateBreadcrumbs(path, pageTitle)
const breadcrumbSchema =
  site && breadcrumbs.length > 1
    ? JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'BreadcrumbList',
        itemListElement: breadcrumbs.map((item, index) => ({
          '@type': 'ListItem',
          position: index + 1,
          name: item.label,
          item: new URL(item.href, site).href,
        })),
      })
    : null
---

{
  breadcrumbs.length > 1 && (
    <div id="breadcrumbs" class="mt-4">
      <nav aria-label="Breadcrumbs" class="breadcrumbs sm:pl-4">
        <ol class="flex items-center space-x-2 text-sm sm:text-md text-primary-offset">
          {breadcrumbs.map((item, index) => (
            <li class="flex items-center">
              {index > 0 && (
                <svg
                  class="w-4 h-4 mx-2 opacity-60 fill-none stroke-primary-offset"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                  focusable="false"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"
                  />
                </svg>
              )}

              {item.isCurrentPage ? (
                <span aria-current="page">
                  {item.label}
                </span>
              ) : (
                <a
                  href={item.href}
                  class="text-inherit underline decoration-current decoration-dotted hover:text-secondary focus-visible:text-secondary focus-visible:no-underline transition-colors duration-200"
                >
                  {item.label}
                </a>
              )}
            </li>
          ))}
        </ol>
        {breadcrumbSchema && (
          <script is:inline type="application/ld+json" set:html={breadcrumbSchema} />
        )}
      </nav>
    </div>
  )
}
