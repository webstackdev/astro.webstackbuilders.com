---
/**
 * Sprite component. Place sprite SVG files in `src/assets/images/sprite` to use.
 */
import classNames from 'classnames'

export interface props {
  class?: string,
  name: string,
}

const { class:className, name } = Astro.props
---

<svg class={classNames('h-6 w-6', `icon--${name}`, className)} role="img" aria-hidden="true" width="24" height="24">
  <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href={`#icon-${name}`}></use>
</svg>
