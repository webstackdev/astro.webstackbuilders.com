---
/**
 * Brand identity with logo and wordmark, used in the Header component
 */
import Logo from '@components/Brand/Logo.astro'
import WordmarkBuilders from '@components/Brand/WordmarkBuilders.astro'
import WordmarkWebstack from '@components/Brand/WordmarkWebstack.astro'
import styles from './index.module.css'
---

<a
  class:list={[
    "flex items-stretch relative focus-visible:outline-none after:pointer-events-none after:absolute after:content-[''] after:inset-0 after:rounded-none after:border-2 after:border-transparent after:opacity-0 after:transition-opacity after:duration-150 after:ease-out focus-visible:after:opacity-100 focus-visible:after:[inset:-6px] focus-visible:after:border-spotlight",
    styles.brandLink,
  ]}
  href="/"
  rel="home"
  aria-label="Webstack Builders home"
>
  <span class="brand-logo">
    <Logo class="h-(--header-icon-size) w-(--header-icon-size) relative z-(--z-content-overlay)" />
  </span>
  <span class="flex flex-col justify-between items-center ml-2 sm:ml-3">
    <span class="brand-wordmark-webstack">
      <WordmarkWebstack class="h-[calc(var(--header-icon-size)/2-0.3em)]" />
    </span>
    <span class="brand-wordmark-builders">
      <WordmarkBuilders class="h-[calc(var(--header-icon-size)/2-0.3em)]" />
    </span>
  </span>
</a>
