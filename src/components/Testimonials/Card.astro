---
import type { CollectionEntry } from 'astro:content'
import Avatar from '@components/Avatar/index.astro'

export interface Props {
  testimonial: CollectionEntry<'testimonials'>
}

const { testimonial } = Astro.props
---

<article class="bg-page-base-offset rounded-xl p-8 shadow-lg border border-trim h-full flex flex-col">
  <div class="text-primary mb-4">
    <svg
      class="w-8 h-8"
      fill="currentColor"
      viewBox="0 0 24 24"
      aria-hidden="true"
      focusable="false"
    >
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z" />
    </svg>
  </div>

  <div class="flex-1 mb-6">
    <blockquote class="text-lg leading-relaxed italic">
      {testimonial.body}
    </blockquote>
  </div>

  <div class="flex items-center gap-4">
    <Avatar name={testimonial.data.name} class="shrink-0" />
    <div>
      <div class="font-semibold">{testimonial.data.name}</div>
      <div class="text-sm text-content-active capitalize">{testimonial.data.organization}</div>
    </div>
  </div>
</article>
