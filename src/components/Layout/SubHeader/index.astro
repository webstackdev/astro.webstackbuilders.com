---
import Icon from '@components/Icon/index.astro'

export type Props = {
  title: string
  description: string
  icon: string
  subtitle?: string
}
const { title, description, icon, subtitle } = Astro.props
---

<header class="text-center max-w-2xl mx-auto mt-6 mb-8">
  <div class="inline-flex items-center justify-center w-18 h-18 rounded-full bg-primary/10 mb-5">
    <Icon
      icon={icon}
      color="page-inverse"
      size={11}
    />
  </div>
  <h1 class="text-4xl md:text-5xl font-bold text-page-inverse mb-4">{title}</h1>
  {description && (
    <p class="text-lg text-content-offset leading-relaxed mb-4">
      {description}
    </p>
  )}
  {subtitle && (
    <p class="text-sm text-page-inverse italic">
      {subtitle}
    </p>
  )}
</header>
