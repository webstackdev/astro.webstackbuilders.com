---
export interface Props {
  tags: string[]
}

const { tags } = Astro.props
---

<ul class="flex flex-wrap gap-1 list-none p-0 m-0" aria-label="Article tags">
  {tags.map((tag) => (
    <li>
      <a
        href={`/tags/${tag}`}
        rel="tag"
        itemprop="keywords"
        class="inline-block px-2 py-0.5 bg-surface-raised rounded text-xs no-underline transition-colors hover:bg-primary hover:text-primary focus:bg-primary focus:text-primary"
      >
        {tag}
      </a>
    </li>
  ))}
</ul>