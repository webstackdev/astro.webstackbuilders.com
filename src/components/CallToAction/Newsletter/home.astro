---
import GDPRConsent from '@components/Consent/Checkbox/index.astro'
import Confetti from '@components/Animations/Confetti/index.astro'
import type { NewsletterProps } from './client/@types'

export type Props = Omit<NewsletterProps, 'variant'>

const {
  title = 'Stay Updated',
  description = 'Subscribe to our newsletter for the latest insights on web development and digital solutions.',
  placeholder = 'Enter your email address',
  buttonText = 'Subscribe',
} = Astro.props
---

<div class="container mx-auto px-4 sm:px-6 lg:px-8">
  <div class="relative overflow-hidden bg-page-offset border border-trim rounded-2xl shadow-lg group">
    <div class="absolute inset-0 opacity-5 pointer-events-none">
      <svg class="w-full h-full" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="grid-pattern" width="40" height="40" patternUnits="userSpaceOnUse">
            <path
              d="M0 40L40 0H20L0 20M40 40V20L20 40"
              stroke="currentColor"
              stroke-width="2"
              fill="none"
              class="text-primary"
            />
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid-pattern)" />
      </svg>
    </div>

    <div class="absolute -top-24 -right-24 w-64 h-64 bg-primary/10 rounded-full blur-3xl pointer-events-none"></div>

    <div class="absolute inset-0 bg-linear-to-r from-page-offset/95 via-page-offset/60 to-transparent pointer-events-none"></div>

    <div class="relative p-8 md:p-10 flex flex-col lg:flex-row gap-10 items-center">
      <div class="lg:flex-1 flex gap-6 md:gap-8">
        <div
          class="hidden sm:flex w-24 md:w-32 bg-linear-to-br from-primary to-spotlight rounded-xl items-center justify-center shrink-0 shadow-lg shadow-primary/20 transform group-hover:scale-105 transition-transform duration-500 self-stretch relative overflow-hidden"
        >
          <div
            class="absolute inset-0 opacity-20 bg-[radial-gradient(circle_at_center,var(--tw-gradient-stops))] from-white to-transparent"
          ></div>
          <div class="absolute left-0 top-0 bottom-0 w-1 bg-white/20"></div>

          <div class="text-page-base flex flex-col items-center gap-2">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
              ></path>
            </svg>
            <span
              class="text-[10px] font-bold uppercase tracking-widest rotate-180 writing-vertical-lr opacity-80 backdrop-blur-sm"
            >
              Issue #42
            </span>
          </div>
        </div>

        <div class="space-y-6 flex-1">
          <div class="relative">
            <div class="flex items-center gap-2 mb-2">
              <span
                class="px-2 py-0.5 rounded-full bg-primary/10 text-primary text-[10px] font-bold uppercase tracking-wider border border-primary/20 backdrop-blur-sm"
              >
                Monthly Dispatch
              </span>
            </div>
            <h2 class="text-2xl md:text-3xl font-black text-content leading-tight drop-shadow-sm">
              {title}
            </h2>
            <p class="text-base font-medium text-content-offset mt-2 max-w-lg">
              {description}
            </p>
          </div>

          <ul class="grid grid-cols-1 sm:grid-cols-2 gap-3 text-sm font-medium text-content-offset">
            <li class="flex items-start gap-2">
              <svg
                class="w-5 h-5 text-success shrink-0 mt-0.5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
              <span>Incident analysis</span>
            </li>
            <li class="flex items-start gap-2">
              <svg
                class="w-5 h-5 text-success shrink-0 mt-0.5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
              <span>Scaling strategies</span>
            </li>
            <li class="flex items-start gap-2">
              <svg
                class="w-5 h-5 text-success shrink-0 mt-0.5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
              <span>Tool evaluations</span>
            </li>
            <li class="flex items-start gap-2">
              <svg
                class="w-5 h-5 text-success shrink-0 mt-0.5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
              <span>Architecture reviews</span>
            </li>
          </ul>
        </div>
      </div>

      <div class="lg:w-80 w-full shrink-0">
        <div class="bg-page-base p-6 rounded-xl border border-trim shadow-sm hover:shadow-md transition-shadow duration-300 relative group/form">
          <div class="absolute -top-3 -right-3">
            <span class="relative flex h-6 w-6">
              <span
                class="animate-ping absolute inline-flex h-full w-full rounded-full bg-spotlight opacity-75"
              ></span>
              <span
                class="relative inline-flex rounded-full h-6 w-6 bg-spotlight items-center justify-center"
              >
                <svg
                  class="w-3 h-3 text-page-base"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 4v16m8-8H4"
                  ></path>
                </svg>
              </span>
            </span>
          </div>

          <form id="newsletter-form" class="space-y-4">
            <div class="relative space-y-1 after:pointer-events-none after:absolute after:content-[''] after:inset-0 after:rounded-none after:border-2 after:border-transparent focus-within:after:-inset-1 focus-within:after:border-spotlight">
              <label
                id="newsletter-email-label"
                for="newsletter-email"
                class="text-xs font-bold text-content uppercase"
              >
                Work Email
              </label>
              <input
                type="email"
                id="newsletter-email"
                name="email"
                placeholder={placeholder}
                class="w-full px-4 py-3 border border-trim rounded-lg bg-page-offset text-sm focus:outline-none focus-visible:outline-none transition-colors"
                required
                aria-describedby="newsletter-message"
              />
            </div>

            <Confetti>
              <button
                type="submit"
                id="newsletter-submit"
                data-e2e-state="idle"
                class="relative w-full px-6 py-3 bg-content text-page-base font-bold rounded-none text-sm transition-all transform hover:-translate-y-0.5 hover:shadow-lg flex items-center justify-center gap-2 group-hover/form:bg-primary disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:translate-y-0 focus-visible:outline-none after:pointer-events-none after:absolute after:content-[''] after:inset-0 after:rounded-none after:border-2 after:border-transparent focus-visible:after:-inset-1 focus-visible:after:border-spotlight"
              >
                <span id="button-text">{buttonText}</span>
                <svg
                  id="button-arrow"
                  class="w-4 h-4 transition-transform group-hover/form:translate-x-1"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                  focusable="false"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"
                  ></path>
                </svg>
                <svg
                  id="button-spinner"
                  class="hidden w-4 h-4 animate-spin"
                  fill="none"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                  focusable="false"
                >
                  <circle
                    class="opacity-25"
                    cx="12"
                    cy="12"
                    r="10"
                    stroke="currentColor"
                    stroke-width="4"
                  ></circle>
                  <path
                    class="opacity-75"
                    fill="currentColor"
                    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                  ></path>
                </svg>
              </button>
            </Confetti>
            <GDPRConsent
              purpose="marketing communications (unsubscribe anytime)"
              id="newsletter-gdpr-consent"
              name="consent"
              formId="newsletter_form"
              variant="newsletter-cta-home"
            />
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
