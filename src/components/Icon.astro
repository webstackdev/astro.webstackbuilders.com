---
/**
 * Returns <svg> block for using SVG icon sprite by icon name. Sprites are generated by
 * the build:sprites Gulp task and included in the page by the GeneratedSprites component.
 */
export interface props {
  iconName: string,
}

const { iconName } = Astro.props
---

<svg class={`icon icon--${iconName}`} role="img" aria-hidden="true" width="24" height="24">
  <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href={`#icon-${iconName}`}></use>
</svg>
