---
/**
 * Minimal Sprite mock for ThemePicker tests.
 * Provides predictable markup without pulling in astro-icon integration.
 */
export interface Props {
  class?: string
  name: string
  size?: number | string
  variant?: string
}

const { class: className, name } = Astro.props
---

<svg
  data-testid="sprite-mock"
  data-icon-name={name}
  class={className}
  aria-hidden="true"
  focusable="false"
/>
