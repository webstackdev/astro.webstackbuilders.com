---
/**
 * Theme Picker Wrapper with View Transition Persistence
 * This wrapper ensures the theme picker state persists across page navigations
 */

// Import the actual theme picker component
import Themes from './Themes.astro'
---

<!--
  Wrapper div with stable ID for view transition matching
  The transition:persist directive will maintain component state across navigations
-->
<div id="theme-picker-wrapper" data-theme-picker>
  <Themes />
</div>

<script>
  import { registerScript } from '@components/Scripts/loader'
  import { ThemePicker } from './client'

  // Register theme picker script with persistence support
  registerScript(ThemePicker)
</script>