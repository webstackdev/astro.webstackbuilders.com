---
/**
 * Test component for Carousel Container API testing
 * Creates a simple carousel structure for unit testing
 */
---

<div class="embla">
  <div class="embla__viewport">
    <div class="embla__container">
      <div class="embla__slide">
        <div class="slide-content">
          <h3>Test Slide 1</h3>
          <p>Content for slide 1</p>
        </div>
      </div>
      <div class="embla__slide">
        <div class="slide-content">
          <h3>Test Slide 2</h3>
          <p>Content for slide 2</p>
        </div>
      </div>
      <div class="embla__slide">
        <div class="slide-content">
          <h3>Test Slide 3</h3>
          <p>Content for slide 3</p>
        </div>
      </div>
    </div>
  </div>

  <button class="embla__button embla__button--prev" type="button">
    <span class="sr-only">Previous</span>
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path
        d="M15 18L9 12L15 6"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"></path>
    </svg>
  </button>

  <button class="embla__button embla__button--next" type="button">
    <span class="sr-only">Next</span>
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path
        d="M9 6L15 12L9 18"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"></path>
    </svg>
  </button>

  <div class="embla__dots">
    <!-- Dots will be created dynamically by JavaScript -->
  </div>
</div>

<style>
  .embla {
    position: relative;
    max-width: 600px;
    margin: 0 auto;
  }

  .embla__viewport {
    overflow: hidden;
  }

  .embla__container {
    display: flex;
  }

  .embla__slide {
    flex: 0 0 100%;
    min-width: 0;
    padding: 1rem;
  }

  .slide-content {
    background: #f5f5f5;
    padding: 2rem;
    border-radius: 8px;
    text-align: center;
  }

  .embla__button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 1;
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid #ccc;
    border-radius: 50%;
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: opacity 0.2s ease;
  }

  .embla__button:hover {
    background: white;
  }

  .embla__button:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .embla__button--prev {
    left: 1rem;
  }

  .embla__button--next {
    right: 1rem;
  }

  .embla__dots {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .embla__dot {
    width: 0.75rem;
    height: 0.75rem;
    border-radius: 50%;
    background: #ccc;
    border: none;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .embla__dot:hover,
  .embla__dot.selected {
    background: #333;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>
