---
import SocialSharesComponent from '@components/Social/Shares/index.astro'
import '@styles/index.css'

export const prerender = true

const pageTitle = 'Social Shares Component Test Fixture'
const fixtureDescription = 'Dedicated route reserved for validating social share automation scenarios. Not intended for production traffic.'
const shareData = {
  url: 'https://astro.webstackbuilders.com/testing/social-shares',
  title: 'Testing Article: Future of Web Performance',
  description: 'Synthetic article metadata supplied solely for end-to-end validation of the social share experience.',
}
---
<!DOCTYPE html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="utf-8">
    <title>{pageTitle}</title>
    <meta name="robots" content="noindex, nofollow">
  </head>
  <body class="bg-bg text-text">
    <main class="min-h-screen flex flex-col items-center gap-8 py-16 px-4">
      <header class="max-w-3xl text-center space-y-4">
        <p class="text-xs uppercase tracking-widest text-text-offset">Testing Fixture</p>
        <h1 class="text-3xl font-semibold leading-tight">{pageTitle}</h1>
        <p class="text-text-offset" data-testid="social-shares-test-description">
          {fixtureDescription}
        </p>
      </header>
      <article class="w-full max-w-3xl space-y-6 bg-bg-offset rounded-lg p-6 shadow-sm" aria-labelledby="fixture-article-heading">
        <div class="space-y-2">
          <p class="text-xs text-text-offset uppercase tracking-wider">Fixture Article</p>
          <h2 id="fixture-article-heading" class="text-2xl font-semibold">{shareData.title}</h2>
          <p class="text-text-offset">{shareData.description}</p>
        </div>
        <p>
          This sandboxed article mimics the metadata and structure of a real post so that automated
          tests can perform deterministic checks against the social share component without
          depending on live content.
        </p>
        <p>
          The section below renders the full social share experience, including native share and
          clipboard utilities when supported by the browser environment.
        </p>
        <section class="border border-border rounded-lg p-4" aria-label="Social share component fixture">
          <SocialSharesComponent
            url={shareData.url}
            title={shareData.title}
            description={shareData.description}
            layout="horizontal"
          />
        </section>
      </article>
    </main>
  </body>
</html>
