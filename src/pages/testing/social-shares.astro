---
import BaseLayout from '@layouts/BaseLayout.astro'
import SocialSharesComponent from '@components/Social/Shares/index.astro'

export const prerender = true

const pageTitle = 'Social Shares Component Test Fixture'
const fixtureDescription =
  'Dedicated route reserved for validating social share automation scenarios. Not intended for production traffic.'
const pagePath = '/testing/social-shares'
const shareData = {
  url: 'https://astro.webstackbuilders.com/testing/social-shares',
  title: 'Testing Article: Future of Web Performance',
  description:
    'Synthetic article metadata supplied solely for end-to-end validation of the social share experience.',
}
---

<BaseLayout pageTitle={pageTitle} path={pagePath} description={fixtureDescription} noindex>
  <section class="mx-auto flex max-w-4xl flex-col items-center gap-8 py-10">
    <header class="max-w-3xl text-center space-y-4">
      <p class="text-xs uppercase tracking-widest text-content-active">Testing Fixture</p>
      <h1 class="text-3xl font-semibold leading-tight">{pageTitle}</h1>
      <p class="text-content-active" data-testid="social-shares-test-description">
        {fixtureDescription}
      </p>
    </header>

    <article
      class="w-full max-w-3xl space-y-6 rounded-lg border border-trim bg-content-inverse-offset p-6 shadow-sm"
      aria-labelledby="fixture-article-heading"
    >
      <div class="space-y-2">
        <p class="text-xs uppercase tracking-wider text-content-active">Fixture Article</p>
        <h2 id="fixture-article-heading" class="text-2xl font-semibold">{shareData.title}</h2>
        <p class="text-content-active">{shareData.description}</p>
      </div>
      <p>
        This sandboxed article mimics the metadata and structure of a real post so that automated
        tests can run deterministic checks against the social share component without depending on
        live content.
      </p>
      <p>
        The section below renders the full social share experience, including native share and
        clipboard utilities when supported by the browser environment.
      </p>
      <section
        class="rounded-lg border border-trim p-4"
        aria-label="Social share component fixture"
      >
        <SocialSharesComponent
          url={shareData.url}
          title={shareData.title}
          description={shareData.description}
          layout="horizontal"
        />
      </section>
    </article>
  </section>
</BaseLayout>
