---
import BaseLayout from '@layouts/BaseLayout.astro'
import NetworkStatusComponent from '@components/Toasts/NetworkStatus/index.astro'

export const prerender = true

const pageTitle = 'Network Status Component Fixture'
const fixtureDescription =
  'Sandbox route dedicated to validating the NetworkStatus toast web component and its connection indicator.'
const pagePath = '/testing/network-status'
---

<BaseLayout pageTitle={pageTitle} path={pagePath} pageDescription={fixtureDescription} noindex>
  <section class="mx-auto flex max-w-4xl flex-col items-center gap-8 py-10">
    <header class="max-w-3xl text-center space-y-4">
      <p class="text-xs uppercase tracking-widest text-content-active">Testing Fixture</p>
      <h1 class="text-3xl font-semibold leading-tight">{pageTitle}</h1>
      <p class="text-content-active" data-testid="network-status-test-description">
        {fixtureDescription}
      </p>
    </header>

    <section
      class="w-full max-w-3xl space-y-6 rounded-lg border border-trim bg-page-offset p-6 shadow-sm"
      aria-label="Network status component fixture"
    >
      <div class="space-y-4">
        <NetworkStatusComponent />
        <div
          class="space-y-3 rounded-lg border border-trim p-4"
          data-testid="network-status-indicator-panel"
        >
          <p class="text-sm text-content-active">Connection Indicator</p>
          <div
            class="connection-status text-green-600 font-semibold"
            data-testid="connection-indicator"
          >
            Online
          </div>
          <p class="text-xs text-content-active">
            The indicator above is updated by NetworkStatus when window online/offline events fire.
            Tests can dispatch those events to simulate connectivity changes and verify toast
            behavior.
          </p>
        </div>
      </div>
    </section>
  </section>
</BaseLayout>
