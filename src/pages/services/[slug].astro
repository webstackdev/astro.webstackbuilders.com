---
import { getCollection } from 'astro:content'
import { Picture } from 'astro:assets'
import MarkdownLayout from '@layouts/MarkdownLayout.astro'
import Carousel from '@components/Carousel/index.astro'
import WebMentions from '@components/WebMentions/index.astro'

/** Generate static paths for all services */
export async function getStaticPaths() {
  const serviceEntries = await getCollection('services')
  return serviceEntries.map(service => ({
    params: { slug: service.id },
    props: { service },
  }))
}

const { service } = Astro.props

const path = `/services/${service.id}`
const pageTitle = service.data.title
const section = 'Downloads'
---

<MarkdownLayout
  collectionItem={service}
  contentType="article"
  description={service.data.description}
  pageTitle={pageTitle}
  path={path}
  publishDate={service.data.publishDate}
  section={section}
  showToc={false}
>
  {/** SLOT: hero-image */}
  {
    service.data.cover && (
      <div
        class="relative w-20 h-20 mx-auto mb-8 bg-primary-offset rounded-xl overflow-hidden"
        slot="hero-image"
      >
        <Picture
          src={service.data.cover}
          alt={service.data.coverAlt}
          widths={[80, 120, 160]}
          sizes="80px"
          formats={['avif', 'webp', 'png']}
          layout="fixed"
          fit="cover"
          position="center"
          class="absolute inset-0 h-full w-full object-cover"
          loading="eager"
        />
      </div>
    )
  }

  <section aria-label="Service details" class="max-w-3xl mx-auto mb-8">
    <dl class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        service.data.category && (
          <div class="bg-page-base-offset rounded-lg p-4">
            <dt class="text-sm font-semibold text-content-active uppercase tracking-wide mb-1">
              Category
            </dt>
            <dd>{service.data.category}</dd>
          </div>
        )
      }
      {
        service.data.pricing && (
          <div class="bg-page-base-offset rounded-lg p-4">
            <dt class="text-sm font-semibold text-content-active uppercase tracking-wide mb-1">
              Pricing
            </dt>
            <dd>{service.data.pricing}</dd>
          </div>
        )
      }
      {
        service.data.duration && (
          <div class="bg-page-base-offset rounded-lg p-4">
            <dt class="text-sm font-semibold text-content-active uppercase tracking-wide mb-1">
              Typical Duration
            </dt>
            <dd>{service.data.duration}</dd>
          </div>
        )
      }
      {
        service.data.deliverables && service.data.deliverables.length > 0 && (
          <div class="bg-page-base-offset rounded-lg p-4 md:col-span-2 lg:col-span-3">
            <dt class="text-sm font-semibold text-content-active uppercase tracking-wide mb-3">
              Deliverables
            </dt>
            <dd>
              <ul class="space-y-2">
                {service.data.deliverables.map((deliverable: string) => (
                  <li class="flex items-start">
                    <svg
                      class="w-5 h-5 text-success mr-2 mt-0.5 shrink-0"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                      aria-hidden="true"
                      focusable="false"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <span class="text-content-active">{deliverable}</span>
                  </li>
                ))}
              </ul>
            </dd>
          </div>
        )
      }
    </dl>
  </section>

  {/** SLOT: after-content */}
  <div slot="after-content">
    {/* WebMentions - shows testimonials, mentions, likes, and reposts */}
    <WebMentions url={`https://www.webstackbuilders.com${path}`} />
  </div>

  {/** SLOT: related-content */}
  <section
    class="border-t border-trim pt-8 mt-12"
    slot="related-content"
    aria-labelledby="services-related-title"
  >
    <header class="mb-8">
      <h2 class="text-2xl font-bold" id="services-related-title">
        Other Services I Offer
      </h2>
    </header>
    <Carousel currentSlug={service.id} variant="suggested" limit={4} title="" type="services" />
  </section>
</MarkdownLayout>
