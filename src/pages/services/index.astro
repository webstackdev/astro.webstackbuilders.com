---
import { getCollection } from 'astro:content'
import { Picture } from 'astro:assets'
import PageLayout from '@layouts/PageLayout.astro'

/** Get all services from content collection */
const allServices = await getCollection('services')

/** Filter and sort services */
const services = allServices.sort(
  (a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()
)

const pageDescription = 'Webstack Builders Services List'
const pageTitle = 'All Services'
const path = '/services/'
const section = 'Services'
---

<PageLayout
  description={pageDescription}
  pageTitle={pageTitle}
  path={path}
  section={section}
  subtitle="Professional web development and consulting services"
>
  {
    services.length > 0 && (
      <section
        class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12"
        aria-labelledby="services-list-title"
      >
        <header class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold" id="services-list-title">
            Our Services
          </h2>
        </header>
        <ul class="space-y-12 md:space-y-20 lg:space-y-20">
          {services.map(service => {
            return (
              <li class="service-item">
                <a
                  href={`/services/${service.id}`}
                  class="block group hover:bg-page-base-offset rounded-lg p-6 transition-colors duration-200 border border-transparent hover:border-trim"
                >
                  <div class="flex items-start space-x-6">
                    {service.data.cover && (
                      <div class="relative shrink-0 w-16 h-16 bg-primary-bg rounded-lg overflow-hidden group-hover:bg-primary-bg-hover transition-colors">
                        <Picture
                          src={service.data.cover}
                          alt={service.data.coverAlt}
                          widths={[64, 96, 128, 192]}
                          sizes="64px"
                          formats={['avif', 'webp', 'png']}
                          layout="fixed"
                          fit="cover"
                          position="center"
                          class="absolute inset-0 h-full w-full object-cover"
                          loading="lazy"
                        />
                      </div>
                    )}
                    <div class="flex-1 min-w-0">
                      <h3 class="text-xl md:text-2xl font-semibold mb-3 group-hover:text-primary transition-colors">
                        {service.data.title}
                      </h3>
                      {service.data.description && (
                        <p class="text-content-muted leading-relaxed">{service.data.description}</p>
                      )}
                    </div>
                    <div class="shrink-0 opacity-0 group-hover:opacity-100 transition-opacity">
                      <svg
                        class="w-5 h-5 text-primary"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        aria-hidden="true"
                        focusable="false"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M17 8l4 4m0 0l-4 4m4-4H3"
                        />
                      </svg>
                    </div>
                  </div>
                </a>
              </li>
            )
          })}
        </ul>
      </section>
    )
  }
</PageLayout>
