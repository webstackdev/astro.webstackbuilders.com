---
import BaseLayout from '@layouts/BaseLayout.astro'
import NetworkStatus from '@components/Toasts/NetworkStatus/index.astro'
import NotFoundHero from '@components/Errors/NotFoundHero/index.astro'

const description =
  'Offline fallback for Webstack Builders with guidance on what to do until you reconnect.'
---

<BaseLayout pageTitle="Offline - Webstack Builders" path="offline" description={description}>
  <!-- Network status monitoring -->
  <NetworkStatus />

  <div
    class="offline-page min-h-screen bg-linear-to-br from-slate-50 to-slate-100 flex items-center justify-center px-4"
  >
    <div class="offline-content max-w-4xl mx-auto text-center">
      <NotFoundHero
        heading="Offline"
        subheading="You're offline"
        description="Sorry, the page you requested can't load while you're offline, but you can still plan your next big idea."
      />

      <!-- Offline Icon -->
      <div class="offline-icon mb-8">
        <div
          class="w-32 h-32 mx-auto bg-linear-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center shadow-lg"
        >
          <svg
            class="w-16 h-16 text-white"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
            aria-hidden="true"
            focusable="false"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2v6m0 8v6m8-10h-6m-8 0H2"
            ></path>
          </svg>
        </div>
      </div>

      <!-- Subtitle -->
      <p class="text-xl text-text-muted mb-8 leading-relaxed">
        No internet connection detected. Don't worry - great ideas don't need wifi!
      </p>

      <!-- What You Can Do Section -->
      <section
        class="offline-actions bg-bg rounded-xl shadow-lg p-8 mb-8"
        aria-labelledby="offline-actions-title"
      >
        <h2 class="text-2xl font-semibold text-text mb-6" id="offline-actions-title">
          What You Can Do While Offline
        </h2>

        <div class="grid md:grid-cols-2 gap-6">
          <!-- Plan Your Project -->
          <div class="action-item text-left">
            <div class="flex items-start space-x-4">
              <div
                class="shrink-0 w-12 h-12 bg-primary-bg rounded-lg flex items-center justify-center"
              >
                <svg
                  class="w-6 h-6 text-primary"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                  focusable="false"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-text mb-2">Plan Your Project</h3>
                <p class="text-text-muted text-sm">
                  Sketch out your ideas, define requirements, and think through your software
                  architecture.
                </p>
              </div>
            </div>
          </div>

          <!-- Review Requirements -->
          <div class="action-item text-left">
            <div class="flex items-start space-x-4">
              <div
                class="shrink-0 w-12 h-12 bg-success-bg rounded-lg flex items-center justify-center"
              >
                <svg
                  class="w-6 h-6 text-success"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                  focusable="false"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-text mb-2">Review Requirements</h3>
                <p class="text-text-muted text-sm">
                  Go through your project checklist and prepare questions for our team.
                </p>
              </div>
            </div>
          </div>

          <!-- Design Wireframes -->
          <div class="action-item text-left">
            <div class="flex items-start space-x-4">
              <div
                class="shrink-0 w-12 h-12 bg-accent-bg rounded-lg flex items-center justify-center"
              >
                <svg
                  class="w-6 h-6 text-accent"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                  focusable="false"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-text mb-2">Design Wireframes</h3>
                <p class="text-text-muted text-sm">
                  Draw out your user interface ideas and user flow diagrams on paper.
                </p>
              </div>
            </div>
          </div>

          <!-- Prepare Content -->
          <div class="action-item text-left">
            <div class="flex items-start space-x-4">
              <div
                class="shrink-0 w-12 h-12 bg-warning-bg rounded-lg flex items-center justify-center"
              >
                <svg
                  class="w-6 h-6 text-warning"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                  focusable="false"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-text mb-2">Prepare Content</h3>
                <p class="text-text-muted text-sm">
                  Write copy, gather images, and organize the content for your website or app.
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Company Info -->
      <section
        class="company-info bg-gray-900 text-white rounded-xl p-8 mb-8"
        aria-labelledby="offline-company-title"
      >
        <h2 class="text-2xl font-semibold mb-4" id="offline-company-title">
          About Webstack Builders
        </h2>
        <p class="text-gray-300 mb-6 leading-relaxed">
          We're a client-focused web application development team specializing in custom software
          solutions, modern web applications, and digital transformation for businesses of all
          sizes.
        </p>
        <div class="grid md:grid-cols-3 gap-4 text-center">
          <div class="stat">
            <div class="text-3xl font-bold text-blue-400">10+</div>
            <div class="text-sm text-gray-400">Years Experience</div>
          </div>
          <div class="stat">
            <div class="text-3xl font-bold text-blue-400">100+</div>
            <div class="text-sm text-gray-400">Projects Delivered</div>
          </div>
          <div class="stat">
            <div class="text-3xl font-bold text-blue-400">24/7</div>
            <div class="text-sm text-gray-400">Support Available</div>
          </div>
        </div>
      </section>

      <!-- Contact Info -->
      <section
        class="contact-info bg-primary-bg rounded-xl p-6"
        aria-labelledby="offline-contact-title"
      >
        <h2 class="text-lg font-semibold text-text mb-4" id="offline-contact-title">
          Get In Touch When You're Back Online
        </h2>
        <div class="grid md:grid-cols-2 gap-4 text-sm">
          <div class="contact-item">
            <strong class="text-text">Email:</strong>
            <span class="text-text-muted">hello@webstackbuilders.com</span>
          </div>
          <div class="contact-item">
            <strong class="text-text">Website:</strong>
            <span class="text-text-muted">www.webstackbuilders.com</span>
          </div>
        </div>
      </section>

      <!-- Retry Button -->
      <section class="retry-section mt-8" aria-labelledby="offline-retry-title">
        <h2 class="sr-only" id="offline-retry-title">Try again</h2>
        <button
          onclick="window.location.reload()"
          class="retry-btn bg-primary hover:bg-primary-hover text-white font-semibold py-3 px-8 rounded-lg transition-colors duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
        >
          <svg
            class="w-5 h-5 inline-block mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
            focusable="false"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
            ></path>
          </svg>
          Try Again
        </button>
      </section>

      <!-- Fun Footer Message -->
      <div class="fun-message mt-8 text-sm text-text-muted">
        <p>
          ðŸ’¡ <em>"The best code is written when the wifi is down and the coffee is strong."</em>
        </p>
      </div>
    </div>
  </div>
</BaseLayout>
