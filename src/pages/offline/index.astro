---
import PageLayout from '@layouts/PageLayout.astro'
import NetworkStatus from '@components/Toasts/NetworkStatus/index.astro'
import Offline from '@components/Pages/Offline/index.astro'

const pageTitle = 'Offline - Webstack Builders'
const pageDescription = 'Offline fallback for Webstack Builders with guidance on what to do until you reconnect.'
const path = 'offline'
---

<PageLayout
  pageTitle={pageTitle}
  pageDescription={pageDescription}
  path={path}
  icon="waiting"
>
  <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8 py-2 md:py-4">
    <!-- Network status monitoring -->
    <NetworkStatus />
    <Offline
      content={{
        title: "You're Offline",
        message: "It looks like your connection dropped. We'll be here when you're back.",
        items: {
          label: "What You Can Do While Offline",
          cards: [
            {
              title: "Outline Your Project",
              description: "Think through your platform goals, infrastructure needs, and engineering priorities.",
              icon: "document",
              color: "primary",
              inverseColor: "blue-100",
            },
            {
              title: "Define Your Requirements",
              description: "Document your reliability targets, CI/CD pipeline needs, and developer enablement goals.",
              icon: "clipboard",
              color: "success",
              inverseColor: "success-inverse",
            },
            {
              title: "Map Your Architecture",
              description: "Sketch your system topology, service dependencies, and deployment strategy on paper.",
              icon: "map",
              color: "accent",
              inverseColor: "purple-100",
            },
            {
              title: "Prepare Your Questions",
              description: "Jot down questions about testing frameworks, cloud migrations, or incident response for our team.",
              icon: "question",
              color: "warning",
              inverseColor: "warning-inverse",
            },
          ],
        },
        about: {
          heading: "About Webstack Builders",
          items: [
            {
              stat: "10+",
              area: "Years Experience",
            },
            {
              stat: "100%",
              area: "IaC &amp; CI/CD",
            },
            {
              stat: "24/7",
              area: "Support Available",
            },
          ],
      },
      close: "Get In Touch When You're Back Online",
      retryText: "Try again",
      }}
    />
  </div>
</PageLayout>
