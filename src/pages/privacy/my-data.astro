---
import BaseLayout from '@layouts/BaseLayout.astro'
import PrivacyForm from '@components/Pages/MyData/index.astro'
const pageTitle = 'My Data - Privacy Rights'
const path = 'privacy/my-data'
const description =
  'Exercise your GDPR rights by requesting a copy of your data or asking us to delete it.'
---

<BaseLayout pageTitle={pageTitle} path={path} description={description}>
  <PrivacyForm content={{
    header: {
      title: "My Data &amp; Privacy Rights",
      description: "Under GDPR, you have the right to access and control your personal data.",
    },
  }} />
</BaseLayout>

