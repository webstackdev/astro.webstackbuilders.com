---
import PageLayout from '@layouts/PageLayout.astro'
import PrivacyForm from '@components/Pages/MyData/index.astro'

const pageTitle = 'My Data - Privacy Rights'
const pageDescription = 'Exercise your GDPR rights by requesting a copy of your data or asking us to delete it.'
const path = 'privacy/my-data'
---

<PageLayout
  pageTitle={pageTitle}
  pageDescription={pageDescription}
  icon="avatar"
  path={path}
>
  <PrivacyForm content={{
    header: {
      title: "My Data & Privacy Rights",
      description: "Under GDPR, you have the right to access and control your personal data.",
    },
    intro: "Use the forms below to request a copy of your data or request its deletion.",
    introLinks: {
      privacyPolicyText: 'Privacy Policy',
      consentPreferencesText: 'Consent Preferences',
    },
    accessData: {
      heading: "Access My Data",
      description: "Request a copy of personal data we have about you, including consent records and newsletter subscriptions.",
      label: "Email Address",
      buttonText: "Request My Data",
    },
     deleteData: {
      heading: "Delete My Data",
      description: "Request deletion of your personal data. We will process your request in accordance with GDPR guidelines.",
      label: "Email Address",
      buttonText: "Delete My Data",
      confirmText: "I understand this will permanently delete all my data",
    },
    next: {
      heading: "What Happens Next?",
      items: [
        {
          lead: "Verification Email:",
          text: "We'll send a verification link to your email address.",
        },
        {
          lead: "Click the Link:",
          text: "Click the link in the email to verify your request (expires in 24 hours).",
        },
        {
          lead: "For Access Requests:",
          text: "Your data will be automatically downloaded as a JSON file.",
        },
        {
          lead: "For Deletion Requests:",
          text: "Your data will be permanently removed and you'll see a confirmation.",
        },
      ]
    }
  }} />
</PageLayout>

