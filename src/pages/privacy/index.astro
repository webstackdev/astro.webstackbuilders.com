---
import BaseLayout from '@layouts/BaseLayout.astro'
import PrivacyLayout from '@components/Layout/Privacy/index.astro'
import contactData from '@content/contact.json'
import { text } from 'mermaid/dist/rendering-util/rendering-elements/shapes/text.js'

const pageTitle = 'Privacy Policy'
const path = '/privacy'
const description =
  'Learn how Webstack Builders collects, uses, and protects your personal information.'
---

<BaseLayout pageTitle={pageTitle} path={path} description={description}>
  <div class="mx-auto px-4 sm:px-6 lg:px-8 py-2 md:py-4">
    <PrivacyLayout
      content={{
        header: {
          title: pageTitle,
          description:
            "Your privacy is important to us. This policy explains how we collect, use, and protect your information.",
        },
        nav: {
          title: "Jump to:",
          items: [
            {
              label: "Collection",
              href: "#privacy-information-we-collect-title",
            },
            {
              label: "Usage",
              href: "#privacy-how-we-use-title",
            },
            {
              label: "Sharing",
              href: "#privacy-how-we-share-title",
            },
            {
              label: "Security",
              href: "#privacy-security-title",
            },
            {
              label: "Your Rights",
              href: "#privacy-your-rights-title",
            },
            {
              label: "Cookies",
              href: "#privacy-cookies-title",
            },
            {
              label: "Storage",
              href: "#privacy-storage-title",
            },
            {
              label: "Monitoring",
              href: "#privacy-monitoring-title",
            },
            {
              label: "Contact",
              href: "#privacy-contact-title",
            },
            {
              label: "Changes",
              href: "#privacy-changes-title",
            },
          ],
        },
        collection: {
          title: "Information We Collect",
          cards: [
            {
              title: "Personal Information",
              description: "When you contact us through our website, we may collect:",
              listItems: [
                {
                  text: "Your name and email address",
                  icon: "avatar",
                  color: "text-blue-600",
                },
                {
                  text: "Company name and contact information",
                  icon: "company",
                  color: "text-purple-600",
                },
                {
                  text: "Project details and requirements you share with us",
                  icon: "clipboard",
                  color: "text-green-600",
                },
                {
                  text: "Any files or documents you upload through our contact form",
                  icon: "download",
                  color: "text-secondary",
                },
              ],
            },
            {
              title: "Automatically Collected Information",
              description: "We automatically collect certain information when you visit our website:",
              listItems: [
                {
                  text: "Browser type and version (user agent)",
                  icon: "globe",
                  color: "text-blue-600",
                },
                {
                  text: "Pages visited and time spent on our site",
                  icon: "document",
                  color: "text-green-600",
                },
                {
                  text: "Referring website information",
                  icon: "paperclip",
                  color: "text-purple-600",
                },
              ],
              trailer: "Note: We do not collect or store IP addresses.",
            },
          ],
        },
        usage: {
          title: "How We Use Your Information",
          description:
            "We use the information we collect for the following purposes:",
          listItems: [
            {
              title: "Communication",
              description: "To respond to your inquiries, provide project quotes, and communicate about potential services",
              icon: "conversation",
              color: "text-success",
              background: "bg-success-inverse",
            },
            {
              title: "Analytics",
              description: "To analyze website usage patterns and improve our site's functionality and user experience",
              icon: "chart",
              color: "text-blue-600 dark:text-blue-400",
              background: "bg-blue-100 dark:bg-blue-900/30",
            },
            {
              title: "Security",
              description: "To protect our website and services from fraud, abuse, and unauthorized access",
              icon: "lock",
              color: "text-purple-600 dark:text-purple-400",
              background: "bg-purple-100 dark:bg-purple-900/30",
            },
            {
              title: "Legal Compliance",
              description: "To comply with applicable laws, regulations, and legal processes",
              icon: "info",
              color: "text-orange-600 dark:text-orange-400",
              background: "bg-orange-100 dark:bg-orange-900/30",
            },
          ],
          listMarkerSize: 6,
        },
        sharing: {
          title: "Information Sharing",
          subtitle: "We Do Not Sell Your Information",
          description: "We do not sell, trade, or otherwise transfer your personal information to third parties. We may share information only in the following limited circumstances:",
          listItems: [
            {
              text: "With trusted service providers who assist in operating our website",
              color: "bg-blue-600 dark:bg-blue-400",
            },
            {
              text: "When required by law or to protect our legal rights",
              color: "bg-green-600 dark:bg-green-400",
            },
            {
              text: "In connection with a business transfer or merger",
              color: "bg-purple-600 dark:bg-purple-400",
            },
            {
              text: "With your explicit consent",
              color: "bg-orange-500 dark:bg-orange-400",
            },
          ],
