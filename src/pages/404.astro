---
import BaseLayout from '@layouts/BaseLayout.astro'
import NotFound from '@components/Pages/NotFound/index.astro'

const pageDescription = "Sorry, the page you are looking for doesn't exist or has been moved.""
const pageTitle = "404 - Page Not Found"
const path = '/404/'
---

<BaseLayout description={pageDescription} noindex={true} pageTitle={pageTitle} path={path}>
  <NotFound
    content={{
      header: {
        title: pageTitle,
        description: pageDescription,
      },
      buttonText: "Go Back Home",
    }}
  />
</BaseLayout>
