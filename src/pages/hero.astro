<BaseLayout description={pageDescription} noindex={true} pageTitle={pageTitle} path={path}>

<h2 id="gemini-1" class="container mx-auto px-4 sm:px-6 lg:px-8 mt-0 text-xs font-bold uppercase tracking-widest text-content-offset">gemini-1</h2>
<section class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16 lg:py-20" aria-labelledby="gemini-1">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
    <div class="hidden lg:block lg:order-2"></div>
    <div class="order-2 lg:order-1 space-y-8 flex flex-col justify-center h-full">
      <div class="space-y-4">
        <span class="px-3 py-1 text-xs font-bold tracking-widest text-primary uppercase bg-primary/10 rounded-full w-fit">
          Platform Engineering
        </span>
      </div>

      <div class="bg-page-base-offset border-l-4 border-primary p-6 rounded-r-xl shadow-sm">
        <h3 class="text-sm font-bold text-content uppercase tracking-wider mb-4">Core Competencies</h3>
        <ol class="space-y-3 list-decimal list-inside text-content-offset font-medium">
          <li class="marker:text-primary marker:font-bold">
            <span class="pl-2">Resilient Infrastructure Design</span>
          </li>
          <li class="marker:text-primary marker:font-bold">
            <span class="pl-2">CI/CD Pipeline Automation</span>
          </li>
          <li class="marker:text-primary marker:font-bold">
            <span class="pl-2">Deployment Self Service</span>
          </li>
          <li class="marker:text-primary marker:font-bold">
            <span class="pl-2">Observability & Incident Response</span>
