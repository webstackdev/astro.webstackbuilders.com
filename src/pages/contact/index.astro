---
import BaseLayout from '../../layouts/BaseLayout.astro'
import ContactForm from '../../components/ContactForm/index.astro'

const pageTitle = 'Contact Us - Webstack Builders'
const path = '/contact'
---

<BaseLayout pageTitle={pageTitle} path={path}>
  <main class="min-h-screen" id="main">
    <!-- Contact Hero Section -->
    <section
      class="py-16 md:py-20 bg-gradient-to-br from-blue-600 to-purple-600 text-white text-center"
    >
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="space-y-6">
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight">
            Let's Build Something Amazing
          </h1>
          <p class="text-lg md:text-xl opacity-90 max-w-2xl mx-auto leading-relaxed">
            Ready to transform your digital presence? Share your project details and let's create
            something extraordinary together.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Form Section -->
    <section class="py-16 bg-[var(--color-theme-bg-offset)]">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ContactForm />
      </div>
    </section>
  </main>
</BaseLayout>
