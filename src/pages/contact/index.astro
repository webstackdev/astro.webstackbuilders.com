---
import contactData from '@content/contact.json'
import PageLayout from '@layouts/PageLayout.astro'
import ContactPage from '@components/Pages/Contact/index.astro'

const pageTitle = 'Contact Us'
const pageDescription = 'Connect with Webstack Builders to discuss your infrastructure needs, request an engagement proposal, or ask questions about platform engineering services.'
---

<PageLayout
  pageTitle={pageTitle}
  pageDescription={pageDescription}
  icon="email"
  path={"/contact"}
>
  <ContactPage content={{
    header: {
      title: "Let's Strengthen Your Infrastructure",
      description: "Ready to level up your platform, pipelines, or reliability? Share your infrastructure needs and we'll figure out the right engagement together.",
    },
    contact: {
      header: "Get In Touch",
      details: [
        {
          text: "Email",
          value: `<a href="mailto:${contactData.company.email}" class="hover:text-secondary hover:underline hover:decoration-secondary">${contactData.company.email}</a>`,
          icon: "email",
          iconClasses: "mb-0.5",
        },
        {
          text: "Location",
          value: "Remote • EST Business Hours",
          icon: "location",
          iconClasses: "ml-1.5 mb-1",
        },
          {
          text: "Response Time",
          value: "Within 24 hours",
          icon: "clock",
        },
      ],
      expertise: {
        header: "Our Expertise",
        areas: [
          { text: "CI/CD Pipeline Design"},
          { text: "Kubernetes & Container Orchestration"},
          { text: "Infrastructure as Code"},
          { text: "Observability & Monitoring"},
          { text: "Cloud Architecture & Cost Optimization"},
          { text: "Incident Response & SRE"},
        ],
      },
      chooseUs: {
        header: "Why Choose Us?",
        areas: [
          { text: "15+ years of engineering experience"},
          { text: "Embedded with your team, not drive-by consulting"},
          { text: "Month-to-month, no long-term contracts"},
          { text: "Async-first communication"},
          { text: "Production-hardened infrastructure skills"},
          { text: "Transparent pricing, no surprise invoices"},
          { text: "Flexible engagement models"},
        ],
      },
    },
    form: {
      header: "Tell us about your infrastructure needs",
      description: "I'll get back to you within 24 hours to discuss the right engagement for your situation.",
      formErrorMssg: "Please fix the errors in your message and hit the submit button again.",
      contact: {
        header: "Contact Information",
        company: "Company Name",
        companyPlaceholder: "Your company name",
        email: "Email Address*",
        emailPlaceholder: "your.email@example.com",
        fullName: "Full Name*",
        fullNamePlaceholder: "Your full name",
        phone: "Phone Number",
        phonePlaceholder: "+1 (555) 123-4567",
      },
      project: {
        header: "Engagement Details",
        budget: "Monthly Budget Range",
        budgetOptions: [
          {
            text: "Select budget range",
            value: "",
          },
          {
            text: "Under $1,500/mo (On-Call Support)",
            value: "under-1500",
          },
          {
            text: "$1,500 - $5,000/mo",
            value: "1500-5k",
          },
          {
            text: "$5,000 - $10,000/mo (Continuous Workstream)",
            value: "5k-10k",
          },
          {
            text: "$10,000 - $20,000/mo (Full Workstream)",
            value: "10k-20k",
          },
          {
            text: "Per-project / Fixed scope",
            value: "per-project",
          },
          {
            text: "Not sure yet",
            value: "unsure",
          },
        ],
        budgetPlaceholder: "Your budget",
        description: "Description*",
        descriptionPlaceholder: "Describe your infrastructure challenges, current stack, team size, and what you're hoping to accomplish...",
        timeline: "Timeline",
        timelineOptions: [
          {
            text: "Select timeline",
            value: "",
          },
          {
            text: "ASAP / Active incident",
            value: "asap",
