---
import BaseLayout from '@layouts/BaseLayout.astro'
import Hero from '@components/Hero/index.astro'
import Services from '@components/Services/Services.astro'
import SuggestedArticles from '@components/SuggestedArticles/index.astro'
import SuggestedCaseStudies from '@components/SuggestedCaseStudies/index.astro'
import Testimonials from '@components/Testimonials/index.astro'
import Contact from '@components/CallToActions/Contact/index.astro'
import Newsletter from '@components/CallToActions/Newsletter/index.astro'
import heroImage from '@assets/images/site/hero.webp'

const pageTitle = "Web Development & Digital Solutions - Webstack Builders"
const path = "/"
---

<BaseLayout pageTitle={pageTitle} path={path}>
  <!-- Hero Section -->
  <Hero
    title="Building Modern Web Solutions That Drive Results"
    image={{
      src: heroImage,
      alt: "Web development illustration showcasing modern web technologies"
    }}
  />

  <!-- About Preview Section -->
  <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="text-center space-y-8">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-[color:var(--color-text)] mb-6">
          Building the Future of Software Development
        </h2>
        <p class="text-xl text-[color:var(--color-text-offset)] leading-relaxed mb-8">
          I'm a solo software development agency specializing in platform engineering, cloud architecture,
          and developer experience optimization. With deep expertise in modern technologies and a focus on
          scalable solutions, I help businesses transform their technical infrastructure and accelerate development workflows.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12">
        <div class="text-center">
          <div class="w-16 h-16 bg-[color:var(--color-primary)] bg-opacity-10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-[color:var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-[color:var(--color-text)] mb-2">Platform Engineering</h3>
          <p class="text-[color:var(--color-text-offset)] text-sm">Scalable infrastructure and developer-first platforms</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-[color:var(--color-primary)] bg-opacity-10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-[color:var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-[color:var(--color-text)] mb-2">Cloud Architecture</h3>
          <p class="text-[color:var(--color-text-offset)] text-sm">Azure-focused solutions that scale with your business</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-[color:var(--color-primary)] bg-opacity-10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-[color:var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-[color:var(--color-text)] mb-2">Developer Experience</h3>
          <p class="text-[color:var(--color-text-offset)] text-sm">Tools and workflows that empower development teams</p>
        </div>
      </div>

      <div class="pt-8">
        <a
          href="/about"
          class="inline-flex items-center px-6 py-3 bg-[color:var(--color-primary)] text-white font-semibold rounded-lg hover:bg-[color:var(--color-primary-offset)] transition-colors duration-200"
        >
          Learn More About My Journey
          <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Services Section -->
  <Services title="Featured Services" featured={true} limit={3} />

  <!-- Case Studies Section -->
  <section class="bg-[color:var(--color-bg-offset)] py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <header class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-[color:var(--color-text)] mb-4">
          Success Stories
        </h2>
        <p class="text-xl text-[color:var(--color-text-offset)] max-w-3xl mx-auto">
          Discover how I've helped businesses transform their technical infrastructure and achieve their goals.
        </p>
      </header>

      <SuggestedCaseStudies title="" limit={3} />

      <div class="text-center mt-10">
        <a
          href="/case-studies"
          class="inline-flex items-center px-6 py-3 border border-[color:var(--color-primary)] text-[color:var(--color-primary)] font-semibold rounded-lg hover:bg-[color:var(--color-primary)] hover:text-white transition-all duration-200"
        >
          View All Case Studies
          <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Latest Articles Section -->
  <section class="py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <header class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-[color:var(--color-text)] mb-4">
          Latest Insights
        </h2>
        <p class="text-xl text-[color:var(--color-text-offset)] max-w-3xl mx-auto">
          Stay up-to-date with the latest trends, best practices, and insights in software development and platform engineering.
        </p>
      </header>

      <SuggestedArticles title="" limit={3} />

      <div class="text-center mt-10">
        <a
          href="/articles"
          class="inline-flex items-center px-6 py-3 border border-[color:var(--color-primary)] text-[color:var(--color-primary)] font-semibold rounded-lg hover:bg-[color:var(--color-primary)] hover:text-white transition-all duration-200"
        >
          Read More Articles
          <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="bg-[color:var(--color-bg-offset)] py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <header class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-[color:var(--color-text)] mb-4">
          What Clients Say
        </h2>
        <p class="text-xl text-[color:var(--color-text-offset)] max-w-3xl mx-auto">
          Don't just take my word for it - hear from the businesses I've helped transform their technical infrastructure.
        </p>
      </header>

      <Testimonials limit={3} />
    </div>
  </section>

  <!-- Primary CTA Section -->
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <Contact
        title="Ready to Transform Your Development Process?"
        description="Let's discuss how platform engineering and modern cloud architecture can accelerate your team's productivity and scale your business. I'd love to hear about your challenges and explore how we can solve them together."
        primaryLink={{ href: "/contact", text: "Start a Conversation" }}
        secondaryLink={{ href: "/services", text: "Explore Services" }}
      />
    </div>
  </section>

  <!-- Newsletter Signup Section -->
  <section class="bg-[color:var(--color-bg-offset)] py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <Newsletter
        title="Stay Connected"
        description="Get the latest insights on platform engineering, cloud architecture, and developer productivity delivered to your inbox. No spam, just valuable content for technical leaders."
        placeholder="Enter your email address"
        buttonText="Subscribe"
      />
    </div>
  </section>

  <!-- Skills/Technologies Preview -->
  <section class="py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl md:text-3xl font-bold text-[color:var(--color-text)] mb-8">
        Technologies & Expertise
      </h2>
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-8">
        <div class="flex flex-col items-center">
          <div class="w-12 h-12 bg-[color:var(--color-primary)] bg-opacity-10 rounded-lg flex items-center justify-center mb-2">
            <span class="text-[color:var(--color-primary)] font-bold text-sm">Go</span>
          </div>
          <span class="text-[color:var(--color-text)] text-sm font-medium">Go</span>
        </div>
        <div class="flex flex-col items-center">
          <div class="w-12 h-12 bg-[color:var(--color-primary)] bg-opacity-10 rounded-lg flex items-center justify-center mb-2">
            <span class="text-[color:var(--color-primary)] font-bold text-sm">TS</span>
          </div>
          <span class="text-[color:var(--color-text)] text-sm font-medium">TypeScript</span>
        </div>
        <div class="flex flex-col items-center">
          <div class="w-12 h-12 bg-[color:var(--color-primary)] bg-opacity-10 rounded-lg flex items-center justify-center mb-2">
            <span class="text-[color:var(--color-primary)] font-bold text-sm">TF</span>
          </div>
          <span class="text-[color:var(--color-text)] text-sm font-medium">Terraform</span>
        </div>
        <div class="flex flex-col items-center">
          <div class="w-12 h-12 bg-[color:var(--color-primary)] bg-opacity-10 rounded-lg flex items-center justify-center mb-2">
            <span class="text-[color:var(--color-primary)] font-bold text-sm">Az</span>
          </div>
          <span class="text-[color:var(--color-text)] text-sm font-medium">Azure</span>
        </div>
        <div class="flex flex-col items-center">
          <div class="w-12 h-12 bg-[color:var(--color-primary)] bg-opacity-10 rounded-lg flex items-center justify-center mb-2">
            <span class="text-[color:var(--color-primary)] font-bold text-sm">K8s</span>
          </div>
          <span class="text-[color:var(--color-text)] text-sm font-medium">Kubernetes</span>
        </div>
        <div class="flex flex-col items-center">
          <div class="w-12 h-12 bg-[color:var(--color-primary)] bg-opacity-10 rounded-lg flex items-center justify-center mb-2">
            <span class="text-[color:var(--color-primary)] font-bold text-sm">Py</span>
          </div>
          <span class="text-[color:var(--color-text)] text-sm font-medium">Python</span>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

