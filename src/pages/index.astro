---
import BaseLayout from '@layouts/BaseLayout.astro'
import Hero from '@components/Hero/Hero.astro'
import Testimonials from '@components/Testimonials/Testimonials.astro'
import Services from '@components/Services/Services.astro'
import heroSvg from '@assets/images/site/hero.svg'

const pageTitle = "Web Development & Digital Solutions - Webstack Builders"
const path = "/"
---
<BaseLayout pageTitle={pageTitle} path={path}>
  <Hero>
    <img
      slot="hero-image"
      src={heroSvg.src}
      alt="Web development illustration"
      class="hero__svg"
    />
  </Hero>

  <Services title="Featured Services" featured={true} limit={3} />

  <Testimonials limit={3} />
</BaseLayout>

